        ];

        let currentView = 'grid';
        let filteredData = [...staffData];

        // Initialize
        function init() {
            renderStaffGrid();
            renderStaffList();
            setupEventListeners();
        }

        // Render Grid View
        function renderStaffGrid() {
            const grid = document.getElementById('staffGrid');
            grid.innerHTML = '';

            filteredData.forEach(staff => {
                const initials = staff.name.split(' ').map(n => n[0]).join('');
                const expiringCerts = staff.certifications.filter(c => c.status === 'expiring').length;

                const card = document.createElement('div');
                card.className = 'staff-card';
                card.innerHTML = `
                    <div class="staff-card-header">
                        <div class="staff-avatar">${initials}</div>
                        <div class="staff-info">
                            <div class="staff-name">${staff.name}</div>
                            <div class="staff-role">${staff.role}</div>
                            <span class="status-badge ${staff.status}">${getStatusText(staff.status)}</span>
                        </div>
                    </div>
                    <div class="staff-card-body">
                        <div class="staff-detail">
                            <span class="staff-detail-icon">üìß</span>
                            <span>${staff.email}</span>
                        </div>
                        <div class="staff-detail">
                            <span class="staff-detail-icon">üì±</span>
                            <span>${staff.phone}</span>
                        </div>
                        ${staff.currentJob ? `
                        <div class="staff-detail">
                            <span class="staff-detail-icon">üìã</span>
                            <span style="color: var(--warning); font-weight: 600;">En: ${staff.currentJob}</span>
                        </div>
                        ` : ''}
                        <div class="certifications">
                            ${staff.certifications.map(cert => 
                                `<span class="cert-badge ${cert.status === 'expiring' ? 'expiring' : ''}">${cert.name}</span>`
                            ).join('')}
                        </div>
                    </div>
                    <div class="staff-card-footer">
                        <div class="hours-today">
                            Horas hoy: <span class="hours-value">${staff.hoursToday}h</span>
                        </div>
                        <button class="btn btn-secondary btn-small" onclick="openStaffDetails(${staff.id})">Ver Detalles</button>
                    </div>
                `;
                grid.appendChild(card);
            });
        }

        // Render List View
        function renderStaffList() {
            const listRows = document.getElementById('listRows');
            listRows.innerHTML = '';

            filteredData.forEach(staff => {
                const initials = staff.name.split(' ').map(n => n[0]).join('');
                
                const row = document.createElement('div');
                row.className = 'list-row';
                row.innerHTML = `
                    <div class="list-staff-info">
                        <div class="list-avatar">${initials}</div>
                        <div class="list-name-role">
                            <div class="list-name">${staff.name}</div>
                            <div class="list-role">${staff.role}</div>
                        </div>
                    </div>
                    <div style="font-size: 0.875rem;">
                        <div>${staff.email}</div>
                        <div style="color: var(--text-secondary); font-size: 0.75rem;">${staff.phone}</div>
                    </div>
                    <div>
                        <span class="status-badge ${staff.status}">${getStatusText(staff.status)}</span>
                    </div>
                    <div style="font-size: 0.875rem; color: var(--text-secondary);">
                        ${staff.currentJob ? `<span style="color: var(--warning); font-weight: 600;">${staff.currentJob}</span>` : 'Sin asignar'}
                    </div>
                    <div style="font-size: 0.875rem; font-weight: 600;">${staff.hoursToday}h</div>
                    <div>
                        <button class="btn btn-secondary btn-icon" onclick="openStaffDetails(${staff.id})">‚Üí</button>
                    </div>
                `;
                row.onclick = (e) => {
                    if (!e.target.closest('button')) {
                        openStaffDetails(staff.id);
                    }
                };
                listRows.appendChild(row);
            });
        }

        // Get status text
        function getStatusText(status) {
            const statusMap = {
                'available': 'Disponible',
                'busy': 'En Trabajo',
                'off': 'Fuera de Servicio'
            };
            return statusMap[status] || status;
        }

        // Open staff details
        function openStaffDetails(id) {
            const staff = staffData.find(s => s.id === id);
            if (!staff) return;

            const initials = staff.name.split(' ').map(n => n[0]).join('');
            
            const avatarEl = document.getElementById('sidebarAvatar');
            avatarEl.textContent = initials;
            avatarEl.dataset.staffId = id;
            
            document.getElementById('sidebarName').textContent = staff.name;
            document.getElementById('sidebarRole').textContent = staff.role;
            document.getElementById('sidebarEmail').textContent = staff.email;
            document.getElementById('sidebarPhone').textContent = staff.phone;
            document.getElementById('sidebarCurrentJob').textContent = staff.currentJob || 'Sin asignar';
            document.getElementById('sidebarCurrentJob').style.color = staff.currentJob ? 'var(--warning)' : 'var(--text-secondary)';
            document.getElementById('sidebarHoursToday').textContent = staff.hoursToday + 'h';
            document.getElementById('sidebarHoursWeek').textContent = staff.hoursWeek + 'h';
            document.getElementById('sidebarJobsCompleted').textContent = staff.jobsCompleted;

            const statusBadge = document.getElementById('sidebarStatus');
            statusBadge.className = `status-badge ${staff.status}`;
            statusBadge.textContent = getStatusText(staff.status);

            const certList = document.getElementById('sidebarCertList');
            certList.innerHTML = staff.certifications.map(cert => `
                <div class="cert-item">
                    <div>
                        <div class="cert-name">${cert.name}</div>
                        <div class="cert-expiry">Vence: ${formatDate(cert.expiry)}</div>
                    </div>
                    <span class="status-badge ${cert.status === 'expiring' ? 'expiring' : 'available'}">
                        ${cert.status === 'expiring' ? 'Por Vencer' : 'Vigente'}
                    </span>
                </div>
            `).join('');

            document.getElementById('staffSidebar').classList.add('active');
        }

        // Format date
        function formatDate(dateStr) {
            const date = new Date(dateStr);
            return date.toLocaleDateString('es-ES', { day: '2-digit', month: '2-digit', year: 'numeric' });
        }

        // Close sidebar
        function closeSidebar() {
            document.getElementById('staffSidebar').classList.remove('active');
        }

        // Filter by status
        function filterByStatus(status) {
            document.getElementById('statusFilter').value = status;
            applyFilters();
        }

        // Apply filters
        function applyFilters() {
            const searchTerm = document.getElementById('searchInput').value.toLowerCase();
            const statusFilter = document.getElementById('statusFilter').value;
            const roleFilter = document.getElementById('roleFilter').value;
            const certFilter = document.getElementById('certFilter').value;

            filteredData = staffData.filter(staff => {
                const matchesSearch = staff.name.toLowerCase().includes(searchTerm) ||
                                    staff.email.toLowerCase().includes(searchTerm) ||
                                    staff.role.toLowerCase().includes(searchTerm);
                const matchesStatus = statusFilter === 'all' || staff.status === statusFilter;
                const matchesRole = roleFilter === 'all' || staff.role.toLowerCase().includes(roleFilter.toLowerCase());
                const matchesCert = certFilter === 'all' || 
                                   staff.certifications.some(c => c.name.toLowerCase().includes(certFilter.toLowerCase()));

                return matchesSearch && matchesStatus && matchesRole && matchesCert;
            });

            renderStaffGrid();
            renderStaffList();
        }

        // Setup event listeners
        function setupEventListeners() {
            // Search input
            document.getElementById('searchInput').addEventListener('input', applyFilters);

            // Filter selects
            document.getElementById('statusFilter').addEventListener('change', applyFilters);
            document.getElementById('roleFilter').addEventListener('change', applyFilters);
            document.getElementById('certFilter').addEventListener('change', applyFilters);

            // View toggle
            document.querySelectorAll('.view-btn').forEach(btn => {
                btn.addEventListener('click', function() {
                    currentView = this.dataset.view;
                    document.querySelectorAll('.view-btn').forEach(b => b.classList.remove('active'));
                    this.classList.add('active');

                    if (currentView === 'grid') {
                        document.getElementById('staffGrid').classList.remove('hidden');
                        document.getElementById('staffList').classList.add('hidden');
                    } else {
                        document.getElementById('staffGrid').classList.add('hidden');
                        document.getElementById('staffList').classList.remove('hidden');
                    }
                });
            });

            // Modal overlay click
            document.getElementById('modalOverlay').addEventListener('click', closeModal);
        }

        // Actions
        function openAddStaff() {
            document.getElementById('addStaffModal').classList.add('active');
        }

        function editStaff() {
            // Pre-fill form with current staff data
            const staff = staffData.find(s => s.id === parseInt(document.getElementById('sidebarAvatar').dataset.staffId));
            if (staff) {
                document.getElementById('staffName').value = staff.name;
                document.getElementById('staffRole').value = staff.role.toLowerCase().replace(' ', '-');
                document.getElementById('staffEmail').value = staff.email;
                document.getElementById('staffPhone').value = staff.phone;
                document.getElementById('staffStatus').value = staff.status;
                
                document.getElementById('modalTitle').textContent = 'Editar Personal';
                document.getElementById('saveStaffBtn').textContent = 'Guardar Cambios';
                document.getElementById('addStaffModal').dataset.mode = 'edit';
                document.getElementById('addStaffModal').dataset.staffId = staff.id;
                
                closeSidebar();
                document.getElementById('addStaffModal').classList.add('active');
            }
        }

        function closeModal() {
            document.getElementById('addStaffModal').classList.remove('active');
            document.getElementById('staffForm').reset();
            document.getElementById('modalTitle').textContent = 'Agregar Personal';
            document.getElementById('saveStaffBtn').textContent = 'Agregar Personal';
            delete document.getElementById('addStaffModal').dataset.mode;
            delete document.getElementById('addStaffModal').dataset.staffId;
        }

        function saveStaff() {
            const form = document.getElementById('staffForm');
            if (!form.checkValidity()) {
                form.reportValidity();
                return;
            }

            const modal = document.getElementById('addStaffModal');
            const mode = modal.dataset.mode;
            const staffId = modal.dataset.staffId;

            const staffInfo = {
                name: document.getElementById('staffName').value,
                role: document.getElementById('staffRole').options[document.getElementById('staffRole').selectedIndex].text,
                email: document.getElementById('staffEmail').value,
                phone: document.getElementById('staffPhone').value,
                status: document.getElementById('staffStatus').value,
                currentJob: null,
                hoursToday: 0,
                hoursWeek: 0,
                jobsCompleted: 0,
                certifications: []
            };

            if (mode === 'edit' && staffId) {
                // Update existing staff
                const index = staffData.findIndex(s => s.id === parseInt(staffId));
                if (index !== -1) {
                    staffData[index] = { ...staffData[index], ...staffInfo };
                    alert('‚úì Personal actualizado exitosamente');
                }
            } else {
                // Add new staff
                const newId = Math.max(...staffData.map(s => s.id)) + 1;
                staffData.push({ id: newId, ...staffInfo });
                alert('‚úì Personal agregado exitosamente');
            }

            filteredData = [...staffData];
            renderStaffGrid();
            renderStaffList();
            closeModal();
        }

        function assignToJob() {
            alert('Abrir formulario para asignar a trabajo');
        }

        function goBack() {
            window.location.href = '../dashboard/template.html';
        }

        // Initialize on load
        document.addEventListener('DOMContentLoaded', init);
    </script>
